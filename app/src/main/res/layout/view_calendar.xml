<?xml version="1.0" encoding="utf-8"?>
<com.bodyweight.fitness.view.CalendarView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/calendar_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.bodyweight.fitness.view.widget.DrawShadowFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="7"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="@color/primaryDark"
                        android:textSize="11sp"
                        android:textAllCaps="true"
                        app:robotoTypeface="roboto_light"
                        android:text="Mon"/>

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="@color/primaryDark"
                        android:textSize="11sp"
                        android:textAllCaps="true"
                        app:robotoTypeface="roboto_light"
                        android:text="Tue"/>

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="@color/primaryDark"
                        android:textSize="11sp"
                        android:textAllCaps="true"
                        app:robotoTypeface="roboto_light"
                        android:text="Wed"/>

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="@color/primaryDark"
                        android:textSize="11sp"
                        android:textAllCaps="true"
                        app:robotoTypeface="roboto_light"
                        android:text="Thu"/>

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="@color/primaryDark"
                        android:textSize="11sp"
                        android:textAllCaps="true"
                        app:robotoTypeface="roboto_light"
                        android:text="Fri"/>

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="@color/primaryDark"
                        android:textSize="11sp"
                        android:textAllCaps="true"
                        app:robotoTypeface="roboto_light"
                        android:text="Sat"/>

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="@color/primaryDark"
                        android:textSize="11sp"
                        android:textAllCaps="true"
                        app:robotoTypeface="roboto_light"
                        android:text="Sun"/>
                </LinearLayout>

                <com.bodyweight.fitness.view.widget.ViewPager
                    android:id="@+id/view_calendar_pager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </com.bodyweight.fitness.view.widget.DrawShadowFrameLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/view_calendar_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:id="@+id/view_calendar_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <com.devspark.robototextview.widget.RobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#676767"
                android:textSize="14sp"
                android:text="When you log a workout, you'll see it here."
                app:robotoTypeface="roboto_regular" />
        </RelativeLayout>
    </LinearLayout>
</com.bodyweight.fitness.view.CalendarView>