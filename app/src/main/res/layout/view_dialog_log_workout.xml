<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white" />

            <LinearLayout
                android:id="@+id/actionView"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:orientation="horizontal"
                android:weightSum="6"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/setValue"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:layout_above="@+id/setSpacer"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="35dp"
                        android:text="1"/>

                    <RelativeLayout
                        android:id="@+id/setSpacer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/setDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/setSpacer"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:text="Set"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <ImageButton
                        android:id="@+id/repsIncrease"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentTop="true"
                        android:paddingBottom="16dp"
                        android:background="@null"
                        app:srcCompat="@drawable/action_arrow_up"/>

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/repsValue"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:layout_above="@+id/repsSpacer"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="35sp"
                        android:text="10"/>

                    <RelativeLayout
                        android:id="@+id/repsSpacer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/repsDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/repsSpacer"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:text="Reps"/>

                    <ImageButton
                        android:id="@+id/repsDecrease"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentBottom="true"
                        android:paddingTop="16dp"
                        android:background="@null"
                        app:srcCompat="@drawable/action_arrow_down"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <ImageButton
                        android:id="@+id/weightIncrease"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentTop="true"
                        android:paddingBottom="16dp"
                        android:background="@null"
                        app:srcCompat="@drawable/action_arrow_up"/>

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/weightValue"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:layout_above="@+id/weightSpacer"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="35sp"
                        android:text="15.0"/>

                    <RelativeLayout
                        android:id="@+id/weightSpacer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/weightDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/weightSpacer"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:text="Weight (lbs)"/>

                    <ImageButton
                        android:id="@+id/weightDecrease"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentBottom="true"
                        android:paddingTop="16dp"
                        android:background="@null"
                        app:srcCompat="@drawable/action_arrow_down"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="240dp"
                android:paddingTop="24dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="24dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/previous_workout_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textColor="#111"
                    android:textSize="18sp"
                    android:text="Previous Workout"
                    app:typeface="roboto_regular"/>

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/previous_workout_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="5-5-5-5"
                    app:typeface="roboto_regular"/>

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/this_workout_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textColor="#111"
                    android:textSize="18sp"
                    android:text="This Workout"
                    app:typeface="roboto_regular"/>
            </LinearLayout>

            <com.devspark.robototextview.widget.RobotoButton
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:textColor="#3A3A47"
                android:text="Save"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>