<?xml version="1.0" encoding="utf-8"?>
<com.bodyweight.fitness.view.DrawerListView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:background="@color/primary">

            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="bottom"
                android:padding="16dp">

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/routine_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    app:typeface="roboto_medium"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/routine_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        app:typeface="roboto_regular"/>

                    <ImageView
                        android:id="@+id/arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_arrow_drop_down"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/action_menu_home"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:textColor="#87000000"
                    android:textSize="14sp"
                    android:text="Home"
                    app:typeface="roboto_medium"/>

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/action_menu_change_routine"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:textColor="#87000000"
                    android:textSize="14sp"
                    android:text="Change Routine"
                    app:typeface="roboto_medium"/>

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/action_menu_workout_log"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:textColor="#87000000"
                    android:textSize="14sp"
                    android:text="Workout Log"
                    app:typeface="roboto_medium"/>

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/action_menu_support_developer"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:textColor="#87000000"
                    android:textSize="14sp"
                    android:text="Support Developer"
                    app:typeface="roboto_medium"/>

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/action_menu_settings"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:textColor="#87000000"
                    android:textSize="14sp"
                    android:text="Settings"
                    app:typeface="roboto_medium"/>
            </LinearLayout>
        </ScrollView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
    </LinearLayout>
</com.bodyweight.fitness.view.DrawerListView>